FROM pytorch/pytorch:1.0.1-cuda10.0-cudnn7-runtime

RUN pip install torchvision==0.2.2 pillow==6.1 Bottleneck==1.2.1 fastai==1.0.60 aiohttp asyncio uvicorn starlette

WORKDIR /workdir

EXPOSE 8501

COPY ./model-ms/src /workdir/

RUN echo "cache bust"
ARG MODEL_DIR
ARG UTILS_DIR
RUN echo $MODEL_DIR
COPY $MODEL_DIR /workdir/model
COPY $UTILS_DIR /workdir/utils

ENTRYPOINT ["python", "server.py", "serve"]
